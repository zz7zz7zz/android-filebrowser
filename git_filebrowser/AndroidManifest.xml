<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.open.filebrowser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<!--读写权限权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="com.open.filebrowser.ui.EduApp">
        <activity
            android:name="com.open.filebrowser.ui.SplashUI"
            android:label="@string/app_name"
            android:screenOrientation="portrait" 
            android:theme="@style/splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.open.filebrowser.ui.MainUI" android:screenOrientation="portrait"/>
        <activity android:name="com.open.filebrowser.ui.FileListUI" android:screenOrientation="portrait"/>
    </application>

</manifest>